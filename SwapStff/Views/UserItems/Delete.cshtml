@model SwapStff.Models.ItemModel

@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<h2 class="text-center">User Items</h2>

<div class="MyTable">
    <h3>Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProfileID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProfileID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemImage)
        </dt>

        <dd>
            <img src="@Model.ItemImage" width="150" height="150" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemDateTimeCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemDateTimeCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            <label id="lblActive" title="@Model.IsActive">@Model.IsActive</label>
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="bigButton" /> |
            @Html.ActionLink("User Items", "Index","UserItems") | @Html.ActionLink("Abuse Items List", "Index", "AbuseItems")
        </div>
    }
</div>
